<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.snaptech.rqk.UI.Fragment.InstituteInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="66dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/emissionsloginlogo"/>

        <com.snaptech.rqk.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Rawdat al-Quran al-Kareem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.rqk.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="1st flr Khatau Mansion, 95G/95K, Block No 5, Bhulabhai Desai Road, Mumbai - 400026."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.rqk.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="rawdatalquran@jameasaifiyah.edu"
            android:autoLink="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.rqk.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="02223620552"
            android:autoLink="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>