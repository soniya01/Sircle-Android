<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.snaptech.asb.UI.Fragment.InstituteInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="172dp"
            android:layout_gravity="center"
            android:layout_height="172dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/emissionsloginlogo"/>

        <com.snaptech.asb.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="American School of Bombay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.asb.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="SF2 G Block, Bandra Kurla Complex, \nBandra East, \nMumbai 400 098, India"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.asb.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="software@asbindia.org"
            android:autoLink="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.asb.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="00912267727270"
            android:autoLink="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>