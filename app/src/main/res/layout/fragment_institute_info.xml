<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.snaptech.kipling.UI.Fragment.InstituteInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="66dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/emissionsloginlogo"/>

        <com.snaptech.kipling.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Kipling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.kipling.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Praderas del Bosque #279,\n Col. San José del Cerrito. C.P. 58341. \n Morelia, Michoacán."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.kipling.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text=" kiplingmorelia@yahoo.com.mx"
            android:autoLink="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.kipling.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:visibility="gone"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="01 (443) 315 99 00"
            android:autoLink="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>
