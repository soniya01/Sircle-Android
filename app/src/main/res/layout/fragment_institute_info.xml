<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.snaptech.stellarpreschool.UI.Fragment.InstituteInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/emissionsloginlogo"/>

        <com.snaptech.stellarpreschool.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Stellar Preschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.stellarpreschool.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="No. 139, Jalan Beringin, \nMelodies Garden. \n80250 Johor Bahru, Johor.  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.stellarpreschool.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="daniel@stellar.edu.my"
            android:autoLink="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.stellarpreschool.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="#002E49"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="+607 336 2116"
            android:autoLink="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</FrameLayout>