<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.snaptech.poorishaadi.UI.Fragment.InstituteInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/emissionsloginlogo"/>

        <com.snaptech.poorishaadi.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="@color/themecolor"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Poori Shaadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.snaptech.poorishaadi.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="@color/themecolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/cocktail_reception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.snaptech.poorishaadi.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="@color/themecolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Venue :\nThe Palace Halls, NSCI,\nLaLa Lajpat Rai Marg, Worli,\nMumbai - 400018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.snaptech.poorishaadi.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="@color/themecolor"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/wedding_ceremony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.snaptech.poorishaadi.custom.RobotoRegularTextView
            android:textSize="18dp"
            android:textColor="@color/themecolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Venue :\nISKON, Mandapam Hall,\nSri Sri Radha Rasabihari Temple,\nHare Krishna Land, Juhu\nMumbai - 400018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>
</FrameLayout>