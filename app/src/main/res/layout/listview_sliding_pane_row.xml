<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#C0C0C0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:id="@+id/mainPaneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/sliding_pane_row_selected_view"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#70F8BA"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/sliding_pane_module_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:contentDescription="@string/description_image_default"
            android:src="@android:drawable/ic_menu_add" />

        <com.snaptech.CentroEducativoLoyola.custom.RobotoLightTextView
            android:textSize="18dp"
            android:id="@+id/sliding_pane_text_module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="0dp"
            android:text="Home"
            android:textColor="#333333" />

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>