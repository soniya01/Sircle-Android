<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/camera_fragment"
        class="com.snaptech.centroeducativomapi.UI.Fragment.CameraFragmentUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/closeCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:contentDescription="Close Camera"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/closecamera" />

        <ImageButton
            android:id="@+id/btn_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="Swap Camera"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/flashoff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E323E"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:contentDescription="Swap Camera"
           android:layout_marginBottom="42dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/rotate" />

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="46dp"
            android:contentDescription="Open Gallery"

            android:src="@drawable/gallery" />

        <ImageButton
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:contentDescription="Take Picture"
            android:src="@drawable/cameracapture" />


    </RelativeLayout>

