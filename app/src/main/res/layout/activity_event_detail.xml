<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.sircle.UI.Activity.EventDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/event_detail_time"
        android:layout_width="match_parent"
        android:text="Event date"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_title"
        android:layout_width="match_parent"
        android:text="Event title"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_category"
        android:layout_width="match_parent"
        android:text="Event category"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_location"
        android:layout_width="match_parent"
        android:text="Event location"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_info"
        android:layout_width="match_parent"
        android:text="Event Info"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_groups"
        android:layout_width="match_parent"
        android:text="Event groups"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_fill"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/event_detail_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="SAVE"
        android:textSize="18sp"
        android:background="#000000"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/event_detail_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="DELETE"
        android:textSize="18sp"
        android:background="#000000"
        android:textColor="@android:color/white"/>

    </LinearLayout>


</ScrollView>
