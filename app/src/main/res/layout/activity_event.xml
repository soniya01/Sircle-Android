<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
android:orientation="vertical"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.app.sircle.UI.Activity.EventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textColor="#303030"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/eventTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:text="Event"
                android:editable="false"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:textColor="#303030"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/holidayEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location"
                android:textColor="#303030"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxHeight="100dp"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Category"
                android:textColor="#303030"
                android:textSize="16sp" />

            <Button
                android:id="@+id/selectCategoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:text="Select Category"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Groups"
                android:textColor="#303030"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/activity_schoolHoliday_list_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Start Date"
                android:textColor="#303030"
                android:textSize="16sp" />

            <Button
                android:id="@+id/holidayEventStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxHeight="100dp"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="End Date"
                android:textColor="#303030"
                android:textSize="16sp" />

            <Button
                android:id="@+id/holidayEventEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Start Time"
                android:textColor="#303030"
                android:textSize="16sp" />

            <Button
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxHeight="100dp"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="End Time"
                android:textColor="#303030"
                android:textSize="16sp" />

            <Button
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:layout_marginTop="10dp"
                android:textColor="#303030"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/eventDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:textColor="#303030"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:layout_marginTop="10dp"
                android:textColor="#303030"
                android:textSize="16sp" />
            <Button
                android:id="@+id/days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:text="1 Day"
                android:textColor="#303030"
                android:textSize="14sp" />
            <Button
                android:id="@+id/hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:text="0 Hour"
                android:textColor="#303030"
                android:textSize="14sp" />
            <Button
                android:id="@+id/minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edit_text_border"
                android:maxLines="2"
                android:padding="15dp"
                android:text="0 Minute"
                android:textColor="#303030"
                android:textSize="14sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:background="@drawable/custom_edit_text_border"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat"
                    android:textColor="#303030"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/activity_event_repeat"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="#9A32CD"
                android:text="Add Event"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>

    </ScrollView>




</LinearLayout>
