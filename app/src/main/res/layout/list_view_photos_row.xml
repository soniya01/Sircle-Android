<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:mrl_rippleAlpha="0.2"
app:mrl_rippleColor="#C0C0C0"
app:mrl_rippleHover="true"
app:mrl_rippleOverlay="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <!--<ImageView-->
    <!--android:id="@+id/photos_row_album_image"-->
    <!--android:layout_width="60dp"-->
    <!--android:layout_height="60dp"-->
    <!--android:padding="10dp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:background="@drawable/custom_border_fill"-->
    <!--android:contentDescription="@string/description_image_default"-->
    <!--android:src="@android:drawable/star_big_off" />-->


    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:background="@color/listimagebackgroundcolor"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textLayout">
        <!--android:layout_alignBaseline="@+id/textLayout"-->
        <!--android:layout_alignBottom="@+id/textLayout">-->

        <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="19dp"
            android:paddingRight="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/photoslist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:id="@+id/textLayout"
        android:layout_toRightOf="@+id/imageLayout"
        android:orientation="vertical">

        <com.snaptech.msb.custom.RobotoLightTextView
            android:id="@+id/links_row_publish_label_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageLayout"
            android:textSize="14dp"
            android:textColor="#666666"
            android:text="Wed 27 July 2015" />

        <com.snaptech.msb.custom.RobotoLightTextView
            android:id="@+id/notification_row_title_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="20dp"
            android:text="Sample pdf"

            android:textColor="#333333"
            />

        <com.snaptech.msb.custom.RobotoLightTextView
            android:id="@+id/notification_row_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/imageLayout"
            android:textSize="14dp"
            android:textColor="#666666"
            android:text="Wed 27 July 2015" />



    </LinearLayout>





    <com.snaptech.msb.custom.RobotoLightTextView
        android:id="@+id/links_row_publish_label_time"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:text="11:00" />



</RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>