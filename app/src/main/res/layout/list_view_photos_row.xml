<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#C0C0C0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/photos_row_album_label_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Wednesday 22 July 2015"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_day_label_size" />

            <TextView
                android:id="@+id/photos_row_album_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="12.45"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_time_label_size" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border_fill">

            <ImageView
                android:id="@+id/photos_row_album_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_border_fill"
                android:contentDescription="@string/description_image_default"
                android:src="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/photos_row_album_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/photos_row_album_image"
                android:layout_toRightOf="@id/photos_row_album_image"
                android:padding="15dp"
                android:text="Album1"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/photos_row_album_next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/description_image_default"
                android:padding="20dp"
                android:src="@android:drawable/arrow_up_float" />

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/photos_row_album_next_icon"
                android:layout_toStartOf="@id/photos_row_album_next_icon">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/description_image_default"
                    android:src="@android:drawable/sym_call_incoming" />

                <TextView
                    android:id="@+id/photos_row_album_images_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1" />

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>