<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#C0C0C0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/photos_row_album_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_border_fill"
                android:contentDescription="@string/description_image_default"
                android:src="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/notification_row_title_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/photos_row_album_image"
                android:layout_toRightOf="@id/photos_row_album_image"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="Album1"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_row_title_label_name"
                android:layout_toRightOf="@id/photos_row_album_image"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/description_image_default"
                    android:src="@drawable/round_button" />

                <TextView
                    android:id="@+id/notification_row_desc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="1" />

            </FrameLayout>

            <TextView
                android:id="@+id/links_row_publish_label_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed 22 July 2015"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_day_label_size" />

            <TextView
                android:id="@+id/links_row_publish_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/links_row_publish_label_day"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                android:text="12.45"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_time_label_size" />


        </RelativeLayout>

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>