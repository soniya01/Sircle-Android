<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/photos_row_album_label_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/darker_gray"
            android:text="Wednesday 22 July 2015"
            android:textSize="@dimen/photos_row_day_label_size"/>

        <TextView
            android:id="@+id/photos_row_album_label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/darker_gray"
            android:text="12.45"
            android:textSize="@dimen/photos_row_time_label_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border_fill">

        <ImageView
            android:id="@+id/photos_row_album_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_image_default"
            android:src="@android:drawable/star_big_off"/>

        <TextView
            android:id="@+id/photos_row_album_label_name"
            android:layout_toRightOf="@id/photos_row_album_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Album1"
            android:padding="15dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photos_row_album_label_name">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_image_default"
                android:src="@android:drawable/sym_call_incoming"/>

            <TextView
                android:id="@+id/photos_row_album_images_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_image_default"
            android:src="@android:drawable/arrow_up_float"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</LinearLayout>