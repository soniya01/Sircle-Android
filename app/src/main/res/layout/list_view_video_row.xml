<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#C0C0C0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/photos_row_album_label_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Wednesday 22 July 2015"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_day_label_size" />

            <TextView
                android:id="@+id/photos_row_album_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="12.45"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_time_label_size" />

        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_video_source_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_video_video_source_label_demmy_text"
            android:textColor="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/fragment_video_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/description_image_default"
            android:src="@android:drawable/dialog_holo_dark_frame" />

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>