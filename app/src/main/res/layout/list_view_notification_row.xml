<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleAlpha="0.2"
    app:mrl_rippleColor="#C0C0C0"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">


            <TextView
                android:id="@+id/notification_row_title_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Heavy Rains"
                android:textStyle="bold"
                android:textColor="#505050"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/notification_row_desc_label"
                android:layout_below="@id/notification_row_title_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="80dp"
                android:layout_marginTop="7dp"
                android:maxLines="3"
                android:text="Heavy rains closes school today"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/notification_row_publish_label_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:text="Wed 22 July 2015"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_day_label_size" />

            <TextView
                android:id="@+id/notification_row_publish_label_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/notification_row_publish_label_day"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="12.45"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/photos_row_time_label_size" />


        </RelativeLayout>

    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>