<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="310dp"
        android:layout_height="423dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/description_image_default"
        android:src="@drawable/splashscreenimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/activity_splash_powered_by_text"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/activity_splash_powered_by_text_view_size" />

</LinearLayout>
