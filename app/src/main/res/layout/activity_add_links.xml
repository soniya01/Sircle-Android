<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.snaptech.spanishdemo.UI.Activity.AddLinksActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <!--<TextView-->
        <!--android:layout_marginTop="18dp"-->
        <!--android:layout_marginLeft="54dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Title: "-->
        <!--android:textColor="#999999"-->
        <!--android:textSize="12dp" />-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_title"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <EditText
        android:id="@+id/activity_add_link_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_placeholder"
        android:drawableLeft="@drawable/linkstitleimage"
        android:maxLines="2"
        android:paddingBottom="20dp"
        android:paddingLeft="0dp"
        android:layout_marginLeft="15dp"
        android:drawablePadding="19dp"
        android:layout_marginRight="15dp"
        android:textColor="#303030"
        android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:text="URL: "-->
        <!--android:textColor="#303030"-->
        <!--android:textSize="16sp" />-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_url"
            android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
        android:id="@+id/activity_add_link_url_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="@string/url_placeholder"
        android:drawableLeft="@drawable/urltitleimage"
        android:maxLines="2"
        android:paddingBottom="20dp"
        android:paddingLeft="0dp"
        android:layout_marginLeft="15dp"
        android:drawablePadding="25dp"
        android:layout_marginRight="15dp"
        android:textColor="#303030"
        android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutSelectAll">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/groupsicon"/>

                <TextView
                android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_list_title"
                android:textSize="20dp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/checkAll"
                        android:checked="false"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkbox_all_title"
                        android:textSize="20dp" />

                </LinearLayout>


            </RelativeLayout>

    <ListView
        android:id="@+id/activity_add_group_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:overScrollMode="never"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

            </LinearLayout>
    </ScrollView>


</LinearLayout>
