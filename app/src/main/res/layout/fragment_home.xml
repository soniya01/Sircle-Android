<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/fragment_home_drawer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/description_image_default"
            android:src="@android:drawable/ic_menu_slideshow"/>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/description_image_default"
        android:layout_marginTop="50dp"
        android:src="@android:drawable/picture_frame"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/activity_login_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_address_text"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/activity_login_address_text_view_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/activity_login_email_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_login_email_address"
                android:textColor="@android:color/white"
                android:lineSpacingExtra="1dp"
                android:textColorLink="@android:color/white"
                android:textSize="@dimen/activity_login_address_text_view_size" />

            <TextView
                android:id="@+id/activity_login_contact_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_login_contact_number"
                android:textColor="@android:color/white"
                android:lineSpacingExtra="1dp"
                android:layout_marginTop="10dp"
                android:textColorLink="@android:color/white"
                android:textSize="@dimen/activity_login_address_text_view_size" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>